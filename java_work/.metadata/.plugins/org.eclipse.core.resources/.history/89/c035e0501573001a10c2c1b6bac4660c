package org.comstudy21.view;

import org.comstudy21.model.People;

public class Search implements PhonebookView {

	@Override
	public void display() {
		People[] pArr = data.pArr;
		
		System.out.println(":::: 검색 기능 ::::");
		System.out.println("1.번호로 찾기 2.이름으로 찾기 3.전화번호로 찾기");
		System.out.println("Choice : ");
		int selectNum = scan.nextInt();
		
		switch(selectNum) {
		case 1 : 
			System.out.print("고유 번호(idx) 입력 : ");
			int userNum = scan.nextInt();
			
			for(int i=0; i<pArr.length; i++){
				if(pArr[i].getIdx() == userNum){
					System.out.println("검색 결과 =>" + pArr[i]);
					return;
				}else {
					System.out.println("일치하는 정보가 없습니다");
				}
			}
			break;
			
		case 2:
			System.out.print("이름 입력 : ");
			String userName = scan.next();
			
			for(int i=0; i<pArr.length; i++){
				if(pArr[i].getName().equals(userName)){
					System.out.println("검색 결과 =>" + pArr[i]);
					return;
				}else {
					System.out.println("일치하는 정보가 없습니다");
				}
			}
			break;
			
		case 3:
			System.out.print("전화번호 입력 : ");
			String userPhone = scan.next();
			
			for(int i=0; i<pArr.length; i++){
				if(pArr[i].getPhone().contains(userPhone) == true){
					System.out.println("검색 결과 =>" + pArr[i]);
					return;
				}else {
					System.out.println("일치하는 정보가 없습니다");
				}
			}
			break;
		}
		

	}

}
