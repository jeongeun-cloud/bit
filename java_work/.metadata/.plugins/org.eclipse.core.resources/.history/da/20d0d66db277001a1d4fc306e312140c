package org.comstudy21.ch16;

import java.util.Hashtable;
import java.util.Scanner;

public class Ex03_Map {
	static Hashtable<Integer, String> mapping = new Hashtable<>();
	static {
		mapping.put(1, "입력입니다.");
		mapping.put(2, "출력입니다.");
		mapping.put(3, "검색입니다.");
		mapping.put(4, "수정입니다.");
		mapping.put(5, "삭제입니다.");
	}
	
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		System.out.println("입력(1), 출력(2), 검색(3), 수정(4), 삭제(5)");
		int no = scan.nextInt();
		
		System.out.println(mapping.get(no));
	}
	
	

	public static void test(String[] args) {
		// map 인터페이스 ---> HashTable 컬렉션 클래스
		// Key : Value의 쌍으로 요소가 구성된다.
		Hashtable<String, String> map = new Hashtable<>();
		map.put("홍길동", "010-1111-1111");
		map.put("김길동", "010-2222-2222");
		map.put("이길동", "010-3333-3333");
		map.put("박길동", "010-4444-4444");
		
		System.out.println(map);
		System.out.println(map.get("김길동")); // 010-2222-2222
		
	}
}
