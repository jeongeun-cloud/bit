package org.comstudy21.view;

import org.comstudy21.model.People;

public class Modify implements PhonebookView {

	@Override
	public void display() {

		People[] pArr = data.pArr;
		System.out.println(data.pArr);
		
		System.out.println(":::: 수정 기능 ::::");
		System.out.println("1.번호로 찾기 2.이름으로 찾기 3.전화번호로 찾기");
		System.out.print("Choice : ");
		int selectNum = scan.nextInt();
		
		switch(selectNum) {
		case 1 : 
			System.out.print("고유 번호(idx) 입력 : ");
			int userNum = scan.nextInt();
			System.out.println(pArr);
			for(int i=0; i<pArr.length; i++){
				if(pArr[i].getIdx() == userNum){
					System.out.print("1.이름 수정 2.전화번호 수정 ");
					int modifyNum = scan.nextInt();
					
					switch(modifyNum){
					case 1 :
						System.out.print("수정할 새 이름 입력 : ");
						String newName = scan.next();
						pArr[i].setName(newName);
					
					case 2 :
						System.out.print("수정할 새 번호 입력 : ");
						String newPhone = scan.next();
						pArr[i].setPhone(newPhone);
					}
					
					System.out.println("수정이 완료되었습니다. 출력을 통해 확인하세요!");
					return;
				}else {
					System.out.println("일치하는 정보가 없습니다");
				}
			}
			break;
			
		case 2:
			System.out.print("이름 입력 : ");
			String userName = scan.next();
			
			for(int i=0; i<pArr.length; i++){
				if(pArr[i].getName().equals(userName)){
					System.out.print("1.이름 수정 2.전화번호 수정 ");
					int modifyNum = scan.nextInt();
					
					switch(modifyNum){
					case 1 :
						System.out.print("수정할 새 이름 입력 : ");
						String newName = scan.next();
						pArr[i].setName(newName);
					
					case 2 :
						System.out.print("수정할 새 번호 입력 : ");
						String newPhone = scan.next();
						pArr[i].setPhone(newPhone);
					}
					
					System.out.println("수정이 완료되었습니다. 출력을 통해 확인하세요!");
					return;
				}else {
					System.out.println("일치하는 정보가 없습니다");
				}
			}
			break;
			
		case 3:
			System.out.print("전화번호 입력 : ");
			String userPhone = scan.next();
			
			for(int i=0; i<pArr.length; i++){
				if(pArr[i].getPhone().contains(userPhone)){
					System.out.print("1.이름 수정 2.전화번호 수정 ");
					int modifyNum = scan.nextInt();
					
					switch(modifyNum){
					case 1 :
						System.out.print("수정할 새 이름 입력 : ");
						String newName = scan.next();
						pArr[i].setName(newName);
					
					case 2 :
						System.out.print("수정할 새 번호 입력 : ");
						String newPhone = scan.next();
						pArr[i].setPhone(newPhone);
					}
					
					System.out.println("수정이 완료되었습니다. 출력을 통해 확인하세요!");
					return;
				}else {
					System.out.println("일치하는 정보가 없습니다");
				}
			}
			break;
		}

		
	}

}
