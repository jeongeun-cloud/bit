package org.comstudy21.ch09;

import java.awt.Button;
import java.awt.Font;
import java.awt.GridLayout;
import java.awt.Label;
import java.awt.Panel;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;



public class Calculator extends MyFrame implements ActionListener{
	Button[] btns = new Button[10];
	{
		for(int i=0; i<btns.length; i++) {
			btns[i] = new Button("" + i);
		}
	}


	private String[] arr = { "MC", "MR", "MS", "M+", "M-", "¡ç", "CE", "C", "¡¾",
            "¡î", "7", "8", "9", "/", "%", "4", "5", "6", "*", "1/x", "1", "2",
            "3", "-", "=", "0", ".", "+"};

	Button[] btn = new Button[arr.length];
	Panel panel = new Panel(new GridLayout(6, 5, 5, 5));
	Panel center = new Panel(new GridLayout());
	Label label = new Label("0");

	
	public Calculator(String title) {
		super(title, 280, 320);
		
		label.setFont(new Font(null, Font.BOLD, 30));
		center.add(label);
		this.add("North",center);
		
		
		for(int i=0; i<arr.length; i++) {
			btn[i] = new Button(arr[i]);
			btn[i].addActionListener(this);
			panel.add(btn[i]);
		}	
		this.add("South", panel);

		setVisible(true);
	}
	
	public static void main(String[] args) {
		new Calculator("°è»ê±â");
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		if (e.getSource() instanceof Button) {
			Button btn = (Button) e.getSource();
			label.setText(btn.getLabel());
		}
		
	}
	
}
