package model;



public class DAO {
	public static final int MAX = 100;
	private DTO[] dtoArr = new DTO[MAX];
	private int top = 0;
	private int seq = 1;
	
	
	// ½Ì±ÛÅæ
	private DAO() {}
	private static DAO instance; 
	public static DAO getInstance() {
		if(instance == null) {
			instance = new DAO();
		}
		return instance;
	}
	
	// ÀÔ·Â
	public void insert(DTO dto) {
		dto.setIdx(seq++);
		dtoArr[top++] = dto;
	}
	
	// Ãâ·Â
	public DTO[] show() {
		DTO[] arr = new DTO[top];
		int cnt = 0;
		
		for(int i=0; i<top; i++) {
			arr[cnt] = new DTO();
			arr[cnt].setIdx(dtoArr[i].getIdx());
			arr[cnt].setName(dtoArr[i].getName());
			arr[cnt].setPhone(dtoArr[i].getPhone());
			cnt++;
		}
		return arr;
	}

}
