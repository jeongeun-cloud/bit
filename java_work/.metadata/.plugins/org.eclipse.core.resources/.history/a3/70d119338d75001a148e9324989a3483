package view;

public class Search implements View {

	@Override
	public void display() {
		System.out.println();
		System.out.println(searchTitle);
		
		System.out.print("검색 할 학생 이름 입력 : ");
		String name = scan.next();
		
		for(int i=0; i<data.dtoArr.length; i++) {
			if(data.dtoArr[i].getName().toUpperCase().equals(name)) {
				System.out.println(data.dtoArr[i]);
			}
		}

	}

}
